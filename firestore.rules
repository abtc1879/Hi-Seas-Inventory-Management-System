rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: read if authenticated, write if own user or super_admin
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      (request.auth.uid == userId || 
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin');
    }
    
    // Materials: read if authenticated, write if admin or super_admin
    match /materials/{materialId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin']);
    }
    
    // Transactions: read if authenticated, write if admin or super_admin
    match /transactions/{transactionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin']);
    }
    
    // Returns: read if authenticated, write if admin or super_admin
    match /returns/{returnId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin']);
    }
  }
}
