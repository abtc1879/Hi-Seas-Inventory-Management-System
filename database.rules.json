{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null && auth.uid === data.child('firebaseUid').val() || root.child('users').child(auth.uid).child('role').val() === 'super_admin'"
    },
    "materials": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'super_admin' || root.child('users').child(auth.uid).child('role').val() === 'admin')"
    },
    "transactions": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'super_admin' || root.child('users').child(auth.uid).child('role').val() === 'admin')"
    },
    "returns": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'super_admin' || root.child('users').child(auth.uid).child('role').val() === 'admin')"
    }
  }
}
